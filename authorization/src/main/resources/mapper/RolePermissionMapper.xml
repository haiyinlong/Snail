<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haiyinlong.snail.authorization.infrastructure.dao.RolePermissionMapper">

    <resultMap id="BaseResultMap"
               type="com.haiyinlong.snail.authorization.infrastructure.dao.entity.RolePermissionEntity">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="roleId" column="role_id" jdbcType="BIGINT" />
        <result property="menuId" column="menu_id" jdbcType="BIGINT" />
    </resultMap>

    <sql id="Base_Column_List">
        id,role_id,menu_id
    </sql>
    <insert id="insertBatch">
        insert into role_permission (role_id,menu_id) values
        <foreach collection="list" item="item" separator=",">
            (#{item.roleId},#{item.menuId})
        </foreach>
    </insert>
    <select id="queryPermissionEntityByRoleIds"
            resultType="com.haiyinlong.snail.authorization.infrastructure.dao.entity.RolePermissionEntity">
        select
        <include refid="Base_Column_List" />
        from role_permission where role_id in
        <foreach item="item" collection="roleIds" separator="," open="(" close=")" index="">
            #{item}
        </foreach>
    </select>
</mapper>

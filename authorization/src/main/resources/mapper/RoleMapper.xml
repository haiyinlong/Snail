<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haiyinlong.snail.authorization.infrastructure.dao.RoleMapper">

    <resultMap id="BaseResultMap" type="com.haiyinlong.snail.authorization.infrastructure.dao.entity.RoleEntity">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="roleName" column="role_name" jdbcType="VARCHAR" />
        <result property="roleCode" column="role_code" jdbcType="VARCHAR" />
        <result property="description" column="description" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        id,role_name,role_code,description,
        create_time,update_time
    </sql>
    <select id="queryRoleByRoleIds"
            resultType="com.haiyinlong.snail.authorization.infrastructure.dao.entity.RoleEntity">
        select
        <include refid="Base_Column_List" />
        from role
        where id in
        <foreach item="item" collection="roleIds" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>
</mapper>

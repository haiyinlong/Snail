<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haiyinlong.snail.authorization.infrastructure.dao.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.haiyinlong.snail.authorization.infrastructure.dao.entity.UserRoleEntity">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="userId" column="user_id" jdbcType="BIGINT" />
        <result property="roleId" column="role_id" jdbcType="BIGINT" />
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,role_id
    </sql>
    <insert id="insertBatch">
        insert into user_role (user_id,role_id) values
        <foreach collection="list" item="item" separator=",">
            (#{item.userId},#{item.roleId})
        </foreach>
    </insert>
    <select id="getUserRole"
            resultType="com.haiyinlong.snail.authorization.infrastructure.dao.entity.UserRoleEntity">
        select
        <include refid="Base_Column_List" />
        from user_role where user_id=#{userId}
    </select>
</mapper>

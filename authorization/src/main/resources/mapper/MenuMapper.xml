<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haiyinlong.snail.authorization.infrastructure.dao.MenuMapper">

    <resultMap id="BaseResultMap" type="com.haiyinlong.snail.authorization.infrastructure.dao.entity.MenuEntity">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="parentId" column="parent_id" jdbcType="BIGINT" />
        <result property="name" column="name" jdbcType="VARCHAR" />
        <result property="url" column="url" jdbcType="VARCHAR" />
        <result property="perms" column="perms" jdbcType="VARCHAR" />
        <result property="type" column="type" jdbcType="INTEGER" />
        <result property="icon" column="icon" jdbcType="VARCHAR" />
        <result property="orderNum" column="order_num" jdbcType="INTEGER" />
        <result property="description" column="description" jdbcType="VARCHAR" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        id,parent_id,name,
        url,perms,type,
        icon,order_num,description,
        create_time,update_time
    </sql>
    <select id="queryMenuEntity"
            resultType="com.haiyinlong.snail.authorization.infrastructure.dao.entity.MenuEntity">
        select
        <include refid="Base_Column_List" />
        from menu
        where id in
        <foreach item="item" collection="menuIds" separator="," open="(" close=")" index="">
            #{item}
        </foreach>
    </select>
    <select id="queryAllMenu"
            resultType="com.haiyinlong.snail.authorization.infrastructure.dao.entity.MenuEntity">
        select
        <include refid="Base_Column_List" />
        from menu
    </select>
</mapper>
